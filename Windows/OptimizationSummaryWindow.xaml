<Window x:Class="VPM.OptimizationSummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Optimization Summary" 
        Width="700" 
        Height="500"
        Background="#1E1E1E"
        Foreground="#FFFFFF"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="True"
        ResizeMode="CanResize"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Summary Panel -->
        <Border Grid.Row="0" Margin="30,40,30,20" Background="#2D2D2D" Padding="30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="TitleBlock" FontSize="18" FontWeight="Bold" Foreground="#64B4FF" Margin="0,0,0,20" TextAlignment="Center"/>
                <TextBlock x:Name="SummaryBlock" FontSize="13" TextWrapping="Wrap" Foreground="#FFFFFF" TextAlignment="Center" LineHeight="22"/>
            </StackPanel>
        </Border>

        <!-- Button Panel -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="OpenBackupButton" Grid.Column="0" Content="Open Backup Folder" Width="160" Height="40" 
                    Background="#2D2D2D" Foreground="White" FontSize="12" FontWeight="Bold"
                    Cursor="Hand" Margin="0,0,10,0"/>
            
            <Button x:Name="FullReportButton" Grid.Column="2" Content="See Full Summary" Width="150" Height="40" 
                    Background="#0E639C" Foreground="White" FontSize="12" FontWeight="Bold"
                    Cursor="Hand" Margin="0,0,10,0"/>
            
            <Button x:Name="OkButton" Grid.Column="3" Content="OK" Width="100" Height="40" 
                    Background="#2D2D2D" Foreground="White" FontSize="12" FontWeight="Bold"
                    Cursor="Hand" IsDefault="True"/>
        </Grid>
    </Grid>
</Window>

