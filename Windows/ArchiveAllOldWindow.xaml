<Window x:Class="VPM.ArchiveAllOldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archive All Old Versions"
        Width="700" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="#1E1E1E"
        Foreground="#E0E0E0">
    <Border BorderBrush="#333" BorderThickness="1" Background="#1E1E1E" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                <Ellipse Width="36" Height="36" Fill="#FF9800" StrokeThickness="0" Opacity="0.85"/>
                <TextBlock Text="📦" FontSize="20" FontWeight="Bold" Foreground="#1E1E1E" Margin="-28,0,0,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="TitleTextBlock" Text="Archive All Old Versions" FontSize="18" FontWeight="SemiBold" Margin="16,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="MessageTextBlock" Grid.Row="2" TextWrapping="Wrap" FontSize="14" Margin="0"/>

            <Border Grid.Row="4" Background="#232323" BorderBrush="#444" BorderThickness="1" CornerRadius="{StaticResource CornerRadiusValue}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="PackageListControl" Margin="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2A2A2A" BorderBrush="#444" BorderThickness="1" CornerRadius="{StaticResource CornerRadiusValue}" Margin="4" Padding="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding DisplayName}" FontSize="13" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" FontSize="11" Foreground="#888" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <Run Text="v"/>
                                            <Run Text="{Binding Version, Mode=OneWay}"/>
                                            <Run Text=" -> "/>
                                            <Run Text="{Binding LatestVersionNumber, Mode=OneWay}" Foreground="#4CAF50"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Margin" Value="8,0,0,0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Background" Value="#FF9800"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="{StaticResource CornerRadiusValue}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsDefault" Value="True">
                                <Setter Property="Background" Value="#FB8C00"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="ArchiveButton" Content="Archive All" Click="ArchiveButton_Click" IsDefault="True"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Background="#424242" Foreground="#E0E0E0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

