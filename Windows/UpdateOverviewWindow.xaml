<Window
    x:Class="VPM.Windows.UpdateOverviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Updates Overview"
    Width="500"
    Height="350"
    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
    Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> 
            <!--  Header  -->
            <RowDefinition Height="Auto" /> 
            <!--  VPM Status  -->
            <RowDefinition Height="Auto" /> 
            <!--  VPB Status  -->
            <RowDefinition Height="*" />    
            <!--  Spacer  -->
            <RowDefinition Height="Auto" /> 
            <!--  Footer  -->
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Update Status" />

        <!--  VPM Section  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,10"
            Padding="10"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="1"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="VPM (Application)" />
                    <TextBlock
                        x:Name="VpmStatusText"
                        Margin="0,5,0,0"
                        Text="Checking..." />
                    <TextBlock
                        x:Name="VpmVersionText"
                        Margin="0,2,0,0"
                        Opacity="0.7"
                        Text="v1.0.0 -&gt; v1.0.1" />
                </StackPanel>
                <Button
                    x:Name="VpmUpdateButton"
                    Grid.Column="1"
                    Width="100"
                    Height="32"
                    VerticalAlignment="Center"
                    Click="VpmUpdateButton_Click"
                    Content="Update"
                    Visibility="Collapsed" />
            </Grid>
        </Border>

        <!--  VPB Section  -->
        <Border
            Grid.Row="2"
            Margin="0,0,0,10"
            Padding="10"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="1"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Text="VPB Plugin" />
                    <TextBlock
                        x:Name="VpbStatusText"
                        Margin="0,5,0,0"
                        Text="Checking..." />
                    <TextBlock
                        x:Name="VpbDetailsText"
                        Margin="0,2,0,0"
                        Opacity="0.7"
                        Text=""
                        TextWrapping="Wrap" />
                </StackPanel>
                <Button
                    x:Name="VpbUpdateButton"
                    Grid.Column="1"
                    Width="100"
                    Height="32"
                    VerticalAlignment="Center"
                    Click="VpbUpdateButton_Click"
                    Content="Update"
                    Visibility="Collapsed" />
            </Grid>
        </Border>

        <Button
            Grid.Row="4"
            Width="100"
            Height="32"
            HorizontalAlignment="Center"
            Click="CloseButton_Click"
            Content="Close" />
    </Grid>
</Window>