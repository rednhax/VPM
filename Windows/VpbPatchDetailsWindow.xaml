<Window
    x:Class="VPM.Windows.VpbPatchDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VPB Patch"
    Width="980"
    Height="720"
    MinWidth="820"
    MinHeight="520"
    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="VpbDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3E3E3E" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="RowBackground" Value="#1E1E1E" />
            <Setter Property="AlternatingRowBackground" Value="#232323" />
            <Setter Property="RowHeight" Value="30" />
        </Style>

        <Style x:Key="VpbDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="BorderBrush" Value="#3E3E3E" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <Style x:Key="VpbDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#1E1E1E" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#37474F" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VpbDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Padding" Value="8,4" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="#E0E0E0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="BorderBrush" Value="#3E3E3E" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="BorderBrush" Value="#3E3E3E" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            x:Name="TabBorder"
                            Margin="2,0,2,0"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter
                                x:Name="ContentSite"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#1E1E1E" />
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#3E3E3E" />
                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="1,1,1,0" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#0078D7" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
            Text="VPB Patch" />

        <Border
            Grid.Row="1"
            Margin="0,12,0,12"
            Padding="12"
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="1"
            CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    FontWeight="SemiBold"
                    Text="Folder" />
                <TextBlock
                    x:Name="FolderText"
                    Grid.Row="0"
                    Grid.Column="1"
                    TextTrimming="CharacterEllipsis" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="24,0,10,0"
                    FontWeight="SemiBold"
                    Text="Git Ref" />
                <TextBlock
                    x:Name="GitRefText"
                    Grid.Row="0"
                    Grid.Column="3" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,6,10,0"
                    FontWeight="SemiBold"
                    Text="Patch Status" />
                <TextBlock
                    x:Name="PatchStatusText"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,6,0,0" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="24,6,10,0"
                    FontWeight="SemiBold"
                    Text="Files" />
                <TextBlock
                    x:Name="CountsText"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="0,6,0,0" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0,10,0,0"
                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                    Text="Outdated means the local file exists but its Git blob checksum does not match the file in the VPB GitHub patch."
                    TextWrapping="Wrap" />
            </Grid>
        </Border>

        <TabControl Grid.Row="2">
            <TabItem Header="Missing">
                <DataGrid
                    x:Name="MissingGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CellStyle="{StaticResource VpbDataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource VpbDataGridColumnHeaderStyle}"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowStyle="{StaticResource VpbDataGridRowStyle}"
                    Style="{StaticResource VpbDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding RelativePath}"
                            Header="Path" />
                        <DataGridCheckBoxColumn
                            Width="90"
                            Binding="{Binding IsRequired}"
                            Header="Required" />
                        <DataGridCheckBoxColumn
                            Width="70"
                            Binding="{Binding IsDirectory}"
                            Header="Dir" />
                        <DataGridTextColumn
                            Width="160"
                            Binding="{Binding Reason}"
                            Header="Reason" />
                        <DataGridTextColumn
                            Width="260"
                            Binding="{Binding ExpectedSha}"
                            Header="Expected SHA" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Outdated">
                <DataGrid
                    x:Name="OutdatedGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CellStyle="{StaticResource VpbDataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource VpbDataGridColumnHeaderStyle}"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowStyle="{StaticResource VpbDataGridRowStyle}"
                    Style="{StaticResource VpbDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding RelativePath}"
                            Header="Path" />
                        <DataGridCheckBoxColumn
                            Width="90"
                            Binding="{Binding IsRequired}"
                            Header="Required" />
                        <DataGridTextColumn
                            Width="160"
                            Binding="{Binding Reason}"
                            Header="Reason" />
                        <DataGridTextColumn
                            Width="260"
                            Binding="{Binding ExpectedSha}"
                            Header="Expected SHA" />
                        <DataGridTextColumn
                            Width="260"
                            Binding="{Binding LocalSha}"
                            Header="Local SHA" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Patched">
                <DataGrid
                    x:Name="PatchedGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CellStyle="{StaticResource VpbDataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource VpbDataGridColumnHeaderStyle}"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowStyle="{StaticResource VpbDataGridRowStyle}"
                    Style="{StaticResource VpbDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding RelativePath}"
                            Header="Path" />
                        <DataGridCheckBoxColumn
                            Width="90"
                            Binding="{Binding IsRequired}"
                            Header="Required" />
                        <DataGridCheckBoxColumn
                            Width="70"
                            Binding="{Binding IsDirectory}"
                            Header="Dir" />
                        <DataGridTextColumn
                            Width="260"
                            Binding="{Binding LocalSha}"
                            Header="Local SHA" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <CheckBox
                    x:Name="ForceReinstallCheckBox"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Content="Force reinstall (overwrite all patch files)" />

                <StackPanel
                    x:Name="ProgressPanel"
                    Grid.Row="1"
                    Margin="0,8,0,0"
                    Visibility="Collapsed">
                    <TextBlock
                        x:Name="ProgressText"
                        Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                        TextWrapping="Wrap" />
                    <ProgressBar
                        x:Name="ProgressBar"
                        Height="8"
                        Margin="0,6,0,0"
                        IsIndeterminate="True" />
                </StackPanel>
            </Grid>

            <Button
                Grid.Column="1"
                Height="32"
                MinWidth="140"
                Margin="0,0,10,0"
                Padding="6,6"
                Click="CopyReport_Click"
                Content="Copy Report" />

            <Button
                x:Name="PrimaryActionButton"
                Grid.Column="2"
                Height="32"
                MinWidth="160"
                Margin="0,0,10,0"
                Padding="6,6"
                Click="PrimaryAction_Click"
                Content="Install Patch" />

            <Button
                x:Name="UninstallButton"
                Grid.Column="3"
                Height="32"
                MinWidth="160"
                Margin="0,0,10,0"
                Padding="6,6"
                Click="Uninstall_Click"
                Content="Uninstall Patch"
                Visibility="Collapsed" />

            <Button
                x:Name="CancelButton"
                Grid.Column="4"
                Height="32"
                MinWidth="120"
                Padding="6,6"
                Click="Cancel_Click"
                Content="Cancel" />
        </Grid>
    </Grid>
</Window>
