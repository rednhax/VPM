<Window
    x:Class="VPM.Windows.PlaylistsManagementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    Title="Manage Playlists"
    Width="1000"
    Height="700"
    Background="{DynamicResource WindowBackgroundBrush}"
    Foreground="{DynamicResource TextBrush}"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowTitleBrush" Color="#202020" />
    </Window.Resources>
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>
    <DockPanel Background="{DynamicResource WindowBackgroundBrush}">
        <Border
            Height="32"
            Padding="12,4,12,4"
            Background="{DynamicResource ControlBackgroundBrush}"
            DockPanel.Dock="Top">
            <TextBlock
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="{DynamicResource TextBrush}"
                Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" />
        </Border>

        <Grid>
            <Grid x:Name="MainContentGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Sidebar  -->
                <Border
                    Grid.Column="0"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="0,0,1,0">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                    <!--  Header  -->
                    <DockPanel
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Playlists" />
                        <Button
                            x:Name="NewPlaylistBtn"
                            Height="32"
                            Padding="10,5"
                            Click="NewPlaylist_Click"
                            Content="âž• New"
                            DockPanel.Dock="Right"
                            FontSize="14" />
                    </DockPanel>

                    <!--  Search  -->
                    <TextBox
                        x:Name="PlaylistSearchBox"
                        Grid.Row="1"
                        Height="32"
                        Margin="0,0,0,12"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        Tag="Search playlists..."
                        TextChanged="PlaylistSearchBox_TextChanged" />

                    <!--  List  -->
                    <ListBox
                        x:Name="PlaylistsListBox"
                        Grid.Row="2"
                        AllowDrop="True"
                        Background="Transparent"
                        BorderThickness="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        PreviewMouseLeftButtonDown="PlaylistsListBox_PreviewMouseLeftButtonDown"
                        MouseMove="PlaylistsListBox_MouseMove"
                        DragOver="PlaylistsListBox_DragOver"
                        DragLeave="PlaylistsListBox_DragLeave"
                        Drop="PlaylistsListBox_Drop"
                        SelectionChanged="PlaylistsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Margin="0,0,8,0"
                                        Padding="4,1"
                                        VerticalAlignment="Center"
                                        Background="{DynamicResource ControlBorderBrush}"
                                        CornerRadius="3">
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{DynamicResource SecondaryTextBrush}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="#{0}">
                                                    <Binding Path="SortOrder" Converter="{StaticResource AddOneConverter}" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Text="{Binding Name}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Button
                                        Grid.Column="2"
                                        Width="28"
                                        Height="24"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="DeletePlaylistInline_Click"
                                        Content="ðŸ—‘ï¸"
                                        FontSize="12"
                                        Foreground="{DynamicResource SecondaryTextBrush}"
                                        ToolTip="Delete playlist" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock
                        Grid.Row="3"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Opacity="0.7"
                        Text="Drag to reorder" />
                    </Grid>
                </Border>

                <!--  Content Area  -->
                <Grid Grid.Column="1" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                <!--  Header / Toolbar  -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Opacity="0.7"
                            Text="PLAYLIST NAME" />
                        <TextBox
                            x:Name="PlaylistNameTextBox"
                            Padding="0,0,0,0"
                            Background="Transparent"
                            BorderThickness="1"
                            CaretBrush="{DynamicResource TextBrush}"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextBrush}"
                            TextChanged="PlaylistName_Changed" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        Margin="0,0,0,2"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            x:Name="ActivatePlaylistBtn"
                            Width="90"
                            Height="32"
                            Margin="12,0,12,0"
                            Padding="16,0"
                            Background="{DynamicResource ButtonBackgroundBrush}"
                            Click="ActivatePlaylist_Click"
                            Content="â–¶ï¸ Activate"
                            FontSize="14"
                            FontWeight="SemiBold" />
                        <Button
                            x:Name="SavePlaylistBtn"
                            Width="80"
                            Height="32"
                            Padding="16,0"
                            Click="SavePlaylist_Click"
                            Content="ðŸ’¾ Save"
                            FontSize="14" />
                    </StackPanel>
                </Grid>

                <!--  Details  -->
                <StackPanel Grid.Row="1" Margin="0,0,0,24">
                    <TextBlock
                        Margin="0,0,0,6"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Opacity="0.7"
                        Text="DESCRIPTION" />
                    <TextBox
                        x:Name="PlaylistDescriptionTextBox"
                        Height="80"
                        Padding="8"
                        AcceptsReturn="True"
                        FontSize="14"
                        TextChanged="PlaylistDescription_Changed"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                    <CheckBox
                        x:Name="UnloadOthersCheckBox"
                        Margin="0,12,0,0"
                        Checked="UnloadOthers_Changed"
                        Content="Unload other packages when activated"
                        FontSize="14"
                        Unchecked="UnloadOthers_Changed" />
                </StackPanel>

                <!--  Packages List  -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0,0,0,10" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Opacity="0.7"
                            Text="PACKAGES" />
                        <TextBlock
                            x:Name="PackageCountTextBlock"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="0 items" />
                    </DockPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="PlaylistPackagesSearchBox"
                            Height="28"
                            VerticalContentAlignment="Center"
                            FontSize="13"
                            Tag="Search packages..."
                            TextChanged="PlaylistPackagesSearchBox_TextChanged" />
                        <Button
                            x:Name="PlaylistPackagesSortToggleBtn"
                            Grid.Column="1"
                            Height="28"
                            Margin="10,0,0,0"
                            Padding="10,0"
                            Click="PlaylistPackagesSortToggle_Click"
                            Content="Aâ€“Z"
                            FontSize="13"
                            ToolTip="Toggle sorting (Aâ€“Z / Original)" />
                    </Grid>

                    <ListBox
                        x:Name="PlaylistPackagesListBox"
                        Grid.Row="2"
                        Background="{DynamicResource ControlBackgroundBrush}"
                        BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{Binding Display}"
                                        TextTrimming="CharacterEllipsis"
                                        ToolTip="{Binding Key}" />
                                    <Button
                                        Grid.Column="1"
                                        Width="24"
                                        Height="24"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="RemovePackage_Click"
                                        Content="âœ•"
                                        Foreground="{DynamicResource SecondaryTextBrush}"
                                        ToolTip="Remove from playlist" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Click="CopySelectedPlaylistPackageKey_Click"
                                    Header="Copy package key" />
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>

                <!--  Footer  -->
                <StackPanel
                    Grid.Row="3"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="32"
                        Padding="0,0"
                        Click="Close_Click"
                        Content="Close"
                        FontSize="14" />
                </StackPanel>
                </Grid>
            </Grid>

            <Grid
                x:Name="ActivationBusyOverlay"
                Background="#80000000"
                Visibility="Collapsed">
                <Border
                    Width="320"
                    Padding="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextBrush}"
                            Text="Activating playlist..." />
                        <TextBlock
                            x:Name="ActivationBusyStatusText"
                            Margin="0,0,0,6"
                            FontSize="12"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="Preparing..." />
                        <TextBlock
                            x:Name="ActivationBusyProgressText"
                            Margin="0,0,0,10"
                            FontSize="12"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            Text="0 / 0" />
                        <ProgressBar
                            x:Name="ActivationBusyProgressBar"
                            Height="10"
                            IsIndeterminate="True" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
