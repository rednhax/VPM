<Window x:Class="VPM.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About VAM Package Manager"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with gradient background -->
        <Border Grid.Row="0" Background="#0078D4" Padding="30,25">
            <StackPanel>
                <TextBlock Text="VAM Package Manager" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="VersionTextBlock" 
                           FontSize="14" 
                           Foreground="#E0E0E0"
                           Margin="0,0,0,10"/>
                <TextBlock Text="A modern package manager for VirtAMate" 
                           FontSize="13" 
                           Foreground="#F0F0F0"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,25,30,20">
                
                <!-- Build Information Section -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Version" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Margin="0,0,0,12"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Framework:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FrameworkTextBlock"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Platform:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PlatformTextBlock" Margin="0,8,0,0"/>
                    </Grid>
                </StackPanel>
                
                <!-- Dependencies Section -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Dependencies" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Margin="0,0,0,12"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="SharpCompress" FontWeight="SemiBold" FontSize="12"/>
                        <TextBlock Text="Archive extraction and compression library" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Margin="0,4,0,0">
                            <Hyperlink x:Name="SharpCompressLink" Click="SharpCompressLink_Click" Foreground="#0078D4">
                                github.com/adamhathcock/sharpcompress
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer with Close button -->
        <Border Grid.Row="2" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                Padding="30,15">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Close" Click="CloseButton_Click" IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
