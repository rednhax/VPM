<Window
    x:Class="VPM.Windows.DependencyGraphWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:graphshape="clr-namespace:GraphShape.Controls;assembly=GraphShape.Controls"
    xmlns:local="clr-namespace:VPM.Windows"
    Title="Dependency Graph"
    Width="1300"
    Height="850"
    MinWidth="800"
    MinHeight="600"
    Background="#1E1E1E"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <!--  Dark Theme ComboBox Style  -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Focusable="False"
                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <Path
                                                    x:Name="Arrow"
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 0 L 4 4 L 8 0 Z"
                                                    Fill="#A0A0A0" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="6,3,23,3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                IsHitTestVisible="False"
                                TextBlock.Foreground="#E0E0E0" />
                            <Popup
                                x:Name="Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    x:Name="DropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                    Background="#2B2B2B"
                                    BorderBrush="#555555"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Dark Theme ComboBoxItem Style  -->
        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border
                            x:Name="Bd"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#404040" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4A4A4A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Dark Theme Button Style  -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#454545" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#777777" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Title Bar Button Style  -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3F3F3F" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Title Bar Close Button Style  -->
        <Style
            x:Key="TitleBarCloseButton"
            BasedOn="{StaticResource TitleBarButton}"
            TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123" />
                                <Setter Property="Foreground" Value="#FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1707A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Custom Title Bar  -->
        <Border Grid.Row="0" Background="#252526">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Title Bar Row  -->
                <Grid
                    Grid.Row="0"
                    Background="#1E1E1E"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Margin="12,0,0,0"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="#E0E0E0"
                            Text="ðŸ“Š " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="#A0A0A0"
                            Text="Dependency Graph - " />
                        <TextBlock
                            x:Name="PackageNameText"
                            VerticalAlignment="Center"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="#007ACC"
                            Text="" />
                    </StackPanel>

                    <!--  Window Controls  -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button
                            Click="MinimizeWindow_Click"
                            Content="â”€"
                            Style="{StaticResource TitleBarButton}"
                            ToolTip="Minimize" />
                        <Button
                            x:Name="MaximizeRestoreButton"
                            Click="MaximizeRestoreWindow_Click"
                            Content="â–¡"
                            Style="{StaticResource TitleBarButton}"
                            ToolTip="Maximize" />
                        <Button
                            Click="CloseWindow_Click"
                            Content="âœ•"
                            Style="{StaticResource TitleBarCloseButton}"
                            ToolTip="Close" />
                    </StackPanel>
                </Grid>

                <!--  Controls Row  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="12,8,12,8"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="Layout:" />
                    <ComboBox
                        x:Name="LayoutComboBox"
                        Width="120"
                        ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                        SelectedIndex="0"
                        SelectionChanged="LayoutComboBox_SelectionChanged"
                        Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Grid" />
                        <ComboBoxItem Content="Sugiyama" />
                        <ComboBoxItem Content="Tree" />
                        <ComboBoxItem Content="Circular" />
                        <ComboBoxItem Content="FR" />
                        <ComboBoxItem Content="CompoundFDP" />
                    </ComboBox>

                    <TextBlock
                        Margin="16,0,8,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="Depth:" />
                    <ComboBox
                        x:Name="DepthComboBox"
                        Width="50"
                        ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                        SelectedIndex="0"
                        SelectionChanged="DepthComboBox_SelectionChanged"
                        Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="1" />
                        <ComboBoxItem Content="2" />
                        <ComboBoxItem Content="3" />
                    </ComboBox>

                    <TextBlock
                        Margin="16,0,8,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="View:" />
                    <ComboBox
                        x:Name="ViewModeComboBox"
                        Width="140"
                        ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                        SelectedIndex="0"
                        SelectionChanged="ViewModeComboBox_SelectionChanged"
                        Style="{StaticResource DarkComboBox}">
                        <ComboBoxItem Content="Dependencies" />
                        <ComboBoxItem Content="Dependents" />
                        <ComboBoxItem Content="Both" />
                    </ComboBox>

                    <Button
                        Width="120"
                        Margin="12,0,0,0"
                        Padding="10,4"
                        Click="Relayout_Click"
                        Content="ðŸ”„ Relayout"
                        Style="{StaticResource DarkButton}" />
                    <Button
                        Width="36"
                        Height="36"
                        Margin="12,0,6,0"
                        Click="ZoomIn_Click"
                        Content="âž•"
                        Style="{StaticResource DarkButton}"
                        ToolTip="Zoom In" />
                    <Button
                        Width="36"
                        Height="36"
                        Margin="0,0,6,0"
                        Click="ZoomOut_Click"
                        Content="âž–"
                        Style="{StaticResource DarkButton}"
                        ToolTip="Zoom Out" />
                    <Button
                        Width="36"
                        Height="36"
                        Click="ResetView_Click"
                        Content="âŸ²"
                        Style="{StaticResource DarkButton}"
                        ToolTip="Reset View" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Graph Area  -->
        <Grid Grid.Row="1">
            <Border
                x:Name="GraphAreaBorder"
                Background="#1A1A1A"
                ClipToBounds="True"
                MouseDown="GraphArea_MouseDown"
                MouseMove="GraphArea_MouseMove"
                MouseUp="GraphArea_MouseUp"
                MouseWheel="GraphArea_MouseWheel">
                <Canvas Background="Transparent">
                    <!--  Grid Layout ItemsControl with same transform as GraphLayout  -->
                    <ItemsControl
                        x:Name="GridItemsControl"
                        Background="Transparent"
                        Visibility="Visible">
                        <ItemsControl.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="GridZoomTransform" ScaleX="1" ScaleY="1" />
                                <TranslateTransform x:Name="GridPanTransform" X="0" Y="0" />
                            </TransformGroup>
                        </ItemsControl.RenderTransform>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel
                                    MaxWidth="1400"
                                    Margin="20"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="120"
                                    Margin="8"
                                    Padding="6"
                                    Background="#2D2D2D"
                                    BorderBrush="{Binding BorderColor}"
                                    BorderThickness="2"
                                    CornerRadius="6"
                                    Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="6"
                                            Opacity="0.3"
                                            ShadowDepth="2"
                                            Color="Black" />
                                    </Border.Effect>
                                    <StackPanel>
                                        <!--  Preview Image (1:1 ratio)  -->
                                        <Border
                                            Width="108"
                                            Height="108"
                                            Margin="0,0,0,6"
                                            Background="#1A1A1A"
                                            CornerRadius="4">
                                            <Border.Clip>
                                                <RectangleGeometry
                                                    RadiusX="4"
                                                    RadiusY="4"
                                                    Rect="0,0,108,108" />
                                            </Border.Clip>
                                            <Grid>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="32"
                                                    Opacity="0.3"
                                                    Text="ðŸ“¦"
                                                    Visibility="{Binding HasPreviewImage, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                <Image
                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                    Source="{Binding PreviewImage}"
                                                    Stretch="UniformToFill"
                                                    Visibility="{Binding HasPreviewImage, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </Border>
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{Binding DisplayName}"
                                            TextAlignment="Center"
                                            TextTrimming="CharacterEllipsis"
                                            ToolTip="{Binding FullName}" />
                                        <TextBlock
                                            FontSize="9"
                                            Foreground="#808080"
                                            Text="{Binding SubText}"
                                            TextAlignment="Center"
                                            TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  GraphShape Layout (for tree/hierarchical views with edges)  -->
                    <local:PocGraphLayout
                        x:Name="GraphLayout"
                        MinWidth="1500"
                        MinHeight="1000"
                        Background="Transparent"
                        HighlightAlgorithmType="Simple"
                        OverlapRemovalAlgorithmType="FSA"
                        Visibility="Collapsed">
                        <local:PocGraphLayout.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" />
                                <TranslateTransform x:Name="PanTransform" X="0" Y="0" />
                            </TransformGroup>
                        </local:PocGraphLayout.RenderTransform>
                        <local:PocGraphLayout.Resources>
                            <!--  Vertex Style  -->
                            <Style TargetType="graphshape:VertexControl">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="graphshape:VertexControl">
                                            <Border
                                                x:Name="NodeBorder"
                                                Width="120"
                                                Padding="6"
                                                Background="#2D2D2D"
                                                BorderThickness="2"
                                                CornerRadius="6"
                                                Cursor="Hand">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="6"
                                                        Opacity="0.3"
                                                        ShadowDepth="2"
                                                        Color="Black" />
                                                </Border.Effect>
                                                <StackPanel>
                                                    <!--  Preview Image (1:1 ratio) - always visible with placeholder  -->
                                                    <Border
                                                        Width="108"
                                                        Height="108"
                                                        Margin="0,0,0,6"
                                                        Background="#1A1A1A"
                                                        CornerRadius="4">
                                                        <Border.Clip>
                                                            <RectangleGeometry
                                                                RadiusX="4"
                                                                RadiusY="4"
                                                                Rect="0,0,108,108" />
                                                        </Border.Clip>
                                                        <Grid>
                                                            <!--  Placeholder icon when no image  -->
                                                            <TextBlock
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="32"
                                                                Opacity="0.3"
                                                                Text="ðŸ“¦"
                                                                Visibility="{Binding HasPreviewImage, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                            <!--  Actual preview image  -->
                                                            <Image
                                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                                Source="{Binding PreviewImage}"
                                                                Stretch="UniformToFill"
                                                                Visibility="{Binding HasPreviewImage, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                        </Grid>
                                                    </Border>

                                                    <!--  Text Content underneath  -->
                                                    <TextBlock
                                                        FontSize="11"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        Text="{Binding DisplayName}"
                                                        TextAlignment="Center"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTip="{Binding FullName}" />
                                                    <TextBlock
                                                        FontSize="9"
                                                        Foreground="#808080"
                                                        Text="{Binding SubText}"
                                                        TextAlignment="Center"
                                                        TextTrimming="CharacterEllipsis" />
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <DataTrigger Binding="{Binding VertexType}" Value="Root">
                                                    <Setter TargetName="NodeBorder" Property="BorderBrush" Value="#4CAF50" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VertexType}" Value="Dependency">
                                                    <Setter TargetName="NodeBorder" Property="BorderBrush" Value="#2196F3" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VertexType}" Value="Dependent">
                                                    <Setter TargetName="NodeBorder" Property="BorderBrush" Value="#FF9800" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VertexType}" Value="Missing">
                                                    <Setter TargetName="NodeBorder" Property="BorderBrush" Value="#F44336" />
                                                    <Setter TargetName="NodeBorder" Property="Background" Value="#3D2020" />
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="NodeBorder" Property="Background" Value="#404040" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <!--  Edge Style  -->
                            <Style TargetType="graphshape:EdgeControl">
                                <Setter Property="Foreground" Value="#505050" />
                                <Setter Property="StrokeThickness" Value="1.5" />
                                <Setter Property="Opacity" Value="0.7" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#007ACC" />
                                        <Setter Property="StrokeThickness" Value="2.5" />
                                        <Setter Property="Opacity" Value="1" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </local:PocGraphLayout.Resources>
                    </local:PocGraphLayout>
                </Canvas>
            </Border>

            <!--  Loading Overlay  -->
            <Border
                x:Name="LoadingOverlay"
                Background="#CC1A1A1A"
                Visibility="Visible">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"
                        FontSize="48"
                        Text="â³" />
                    <TextBlock
                        x:Name="LoadingText"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="#E0E0E0"
                        Text="Loading dependency graph..." />
                    <ProgressBar
                        x:Name="LoadingProgress"
                        Width="300"
                        Height="8"
                        Margin="0,16,0,0"
                        Background="#333333"
                        Foreground="#007ACC"
                        IsIndeterminate="True" />
                </StackPanel>
            </Border>
        </Grid>

        <!--  Legend  -->
        <Border
            Grid.Row="2"
            Padding="12"
            Background="#252526">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border
                        Width="12"
                        Height="12"
                        Margin="0,0,5,0"
                        Background="#4CAF50"
                        CornerRadius="6" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="Root" />

                    <Border
                        Width="12"
                        Height="12"
                        Margin="0,0,5,0"
                        Background="#2196F3"
                        CornerRadius="6" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="Dependency" />

                    <Border
                        Width="12"
                        Height="12"
                        Margin="0,0,5,0"
                        Background="#FF9800"
                        CornerRadius="6" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="Dependent" />

                    <Border
                        Width="12"
                        Height="12"
                        Margin="0,0,5,0"
                        Background="#F44336"
                        CornerRadius="6" />
                    <TextBlock
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Foreground="#A0A0A0"
                        Text="Missing" />

                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="#404040"
                        Text="â”‚" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="#606060"
                        Text="ðŸ’¡ Scroll to zoom â€¢ Drag to pan â€¢ Drag nodes to reposition" />
                </StackPanel>

                <TextBlock
                    x:Name="StatsText"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Foreground="#808080"
                    Text="Nodes: 0 â”‚ Edges: 0" />
            </Grid>
        </Border>
    </Grid>
</Window>
